@using TechJobsPersistent.ViewModels
@model AddJobViewModel
<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="JobName">Job Name</label>
        <input asp-for="JobName" class="form-control" />
        <span asp-validation-for="JobName"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="EmployerId">Choose an Employer: </label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
    </div>
    

    <a href="/Employer/add">Add New Employer</a>

    <div class="form-group">
        @foreach (var skillyBob in @Model.Skills)
        {
            <label>@skillyBob.Name</label>
            <input type="checkbox" name="selectedSkills" value="@skillyBob.Id" />
        }
    </div>

    <a href="/Skill/add">Add New Skill</a>
    
    <input type="submit" value="Submit" />
</form>
